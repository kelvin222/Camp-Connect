<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/baseline_fingerprint_24"
        android:padding="3dp"
        app:srcCompat="@drawable/baseline_fingerprint_24" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/baseline_fingerprint_24"
        android:padding="3dp"
        app:srcCompat="@drawable/baseline_fingerprint_24" />


    <android.support.v7.widget.CardView
        android:id="@+id/cardr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/message_profile_image2"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="7dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/ename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:longClickable="true"
                android:text="my name"
                android:textColor="@color/colorPrimaryWhite"
                android:textIsSelectable="true"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/echat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ename"
                android:layout_alignParentLeft="true"
                android:text="loading..."
                android:textColor="@color/colorPrimaryWhite"
                android:textIsSelectable="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/edate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/echat"
                android:layout_alignParentLeft="true"
                android:text="00:00"
                android:textColor="@color/colorPrimaryWhite"
                android:textIsSelectable="true"
                android:textSize="8sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/message_profile_image"
        app:cardBackgroundColor="@color/colorPrimaryWhite"
        app:cardCornerRadius="7dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/sname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:longClickable="true"
                android:text="sender name"
                android:textColor="@color/colorPrimary"
                android:textIsSelectable="true"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/schat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sname"
                android:layout_alignParentLeft="true"
                android:text="loading..."
                android:textColor="@color/colorPrimaryDark"
                android:textIsSelectable="true"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/sdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/schat"
                android:layout_alignParentLeft="true"
                android:text="00:00"
                android:textColor="@color/colorPrimaryDark"
                android:textIsSelectable="true"
                android:textSize="8sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>

