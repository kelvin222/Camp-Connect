<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="3dp"
        android:src="?android:attr/fingerprintAuthDrawable" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="3dp"
        android:src="?android:attr/fingerprintAuthDrawable" />

    <TextView
        android:id="@+id/receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/message_profile_image"
        android:background="@drawable/message_text_background2"
        android:longClickable="true"
        android:padding="10dp"
        android:text="receiver messages"
        android:textColor="@color/colorPrimaryWhite"
        android:textIsSelectable="true"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/sender_messsage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/message_profile_image2"
        android:background="@drawable/message_text_background"
        android:longClickable="true"
        android:padding="10dp"
        android:text="sender messages"
        android:textColor="@color/colorPrimaryWhite"
        android:textIsSelectable="true"
        android:textSize="14sp" />

</RelativeLayout>

